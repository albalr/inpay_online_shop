<!DOCTYPE html>
<html>
<head>
  <title>Create New Product</title>
  <%= stylesheet_link_tag 'shared', media: 'all' %>
</head>
<body>
<h1>Create New Product</h1>

<!-- Form for creating a new product -->
<!-- form_with automatically includes a hidden CSRF token for security -->
<%= form_with model: @product, local: true do |form| %>

  <!-- Field: Product Name -->
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- Field: Product Description -->
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <!-- Field: Product Price -->
  <div>
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <!-- Field: Product Stock Quantity -->
  <div>
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity %>
  </div>

  <%= form.submit "Create Product", class: "submit-button" %>
<% end %>
</body>
</html>